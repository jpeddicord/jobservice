<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE settings PUBLIC
 "-//Ubuntu//DTD JobService Service-Level Settings 0.1//EN"
 "http://people.ubuntu.com/~jpeddicord/SLS/0.1/sls.dtd">
<settings>
    <setting name="port" type="int">
        <_description>Port</_description>
        <data>
            <parse file="/etc/ssh/sshd_config">Port %s</parse>
        </data>
        <values min="0" max="65535" />
    </setting>
    <setting name="x11" type="bool">
        <_description>X11 Forwarding</_description>
        <data>
            <parse file="/etc/ssh/sshd_config">X11Forwarding %s</parse>
        </data>
        <values>
            <value name="true">
                <raw>yes</raw>
            </value>
            <value name="false">
                <raw>no</raw>
            </value>
        </values>
    </setting>
    <setting name="auth_password" type="bool">
        <_description>Allow password authentication</_description>
        <data>
            <parse file="/etc/ssh/sshd_config">PasswordAuthentication %s</parse>
        </data>
        <values>
            <value name="true">
                <raw>yes</raw>
            </value>
            <value name="false">
                <raw>no</raw>
            </value>
        </values>
    </setting>
    <setting name="auth_pubkey" type="bool">
        <_description>Allow public key authentication</_description>
        <data>
            <parse file="/etc/ssh/sshd_config">PubkeyAuthentication %s</parse>
        </data>
        <values>
            <value name="true">
                <raw>yes</raw>
            </value>
            <value name="false">
                <raw>no</raw>
            </value>
        </values>
    </setting>
    <setting name="permitroot" type="bool">
        <_description>Permit remote root login</_description>
        <data>
            <parse file="/etc/ssh/sshd_config">PermitRootLogin %s</parse>
        </data>
        <values>
            <value name="true">
                <raw>yes</raw>
            </value>
            <value name="false">
                <raw>no</raw>
            </value>
        </values>
    </setting>
    <setting name="keepalive" type="bool">
        <_description>Keep idle connections alive</_description>
        <data>
            <parse file="/etc/ssh/sshd_config">TCPKeepAlive %s</parse>
        </data>
        <values>
            <value name="true">
                <raw>yes</raw>
            </value>
            <value name="false">
                <raw>no</raw>
            </value>
        </values>
    </setting>
</settings>
