<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE settings PUBLIC
 "-//Ubuntu//DTD JobService Service-Level Settings 0.1//EN"
 "http://people.ubuntu.com/~jpeddicord/SLS/0.1/sls.dtd">
<settings>
    <setting type="exec" name="gufw">
        <description>Manage your firewall</description>
        <data val="gufw"/>
    </setting>
    <setting type="bool" name="ipv6">
        <description>Use IPV6</description>
        <data>
            <parse file="/etc/default/ufw">IPV6=%s</parse>
        </data>
        <values>
            <value name="true">
                <raw>yes</raw>
            </value>
            <value name="false">
                <raw>no</raw>
            </value>
        </values>
    </setting>
    <setting type="choice" name="default_input_policy">
        <description>Default inbound policy</description>
        <data>
            <parse file="/etc/default/ufw">DEFAULT_INPUT_POLICY="%s"</parse>
        </data>
        <values>
            <value name="drop">
                <raw>DROP</raw>
                <description>Drop</description>
            </value>
            <value name="accept">
                <raw>ACCEPT</raw>
                <description>Accept</description>
            </value>
            <value name="accept_no_track">
                <raw>ACCEPT_NO_TRACK</raw>
                <description>Accept (no connection tracking)</description>
            </value>
            <value name="reject">
                <raw>REJECT</raw>
                <description>Reject</description>
            </value>
        </values>
    </setting>
    <setting type="choice" name="default_output_policy">
        <description>Default outbound policy</description>
        <data>
            <parse file="/etc/default/ufw">DEFAULT_OUTPUT_POLICY="%s"</parse>
        </data>
        <values>
            <value name="drop">
                <raw>DROP</raw>
                <description>Drop</description>
            </value>
            <value name="accept">
                <raw>ACCEPT</raw>
                <description>Accept</description>
            </value>
            <value name="accept_no_track">
                <raw>ACCEPT_NO_TRACK</raw>
                <description>Accept (no connection tracking)</description>
            </value>
            <value name="reject">
                <raw>REJECT</raw>
                <description>Reject</description>
            </value>
        </values>
    </setting>
</settings>